@model List<Order>

@{
    ViewData["Title"] = "訂單總覽";
}
<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>所有訂單</h4>
        </p>

        <table class="table">
            <thead>
                <tr>
                    <th class="text-center">訂單編號</th>
                    <th class="text-center">商品名稱</th>
                    <th class="text-center">總金額</th>
                    <th class="text-center">訂購人</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td class="align-middle text-center">@order.Id</td>
                        <td class="align-middle">
                            <ul style="list-style-type:none">
                                @foreach (var item in order.OrderItems)
                                {
                                    <li>
                                        <div class="alert alert-info" role="alert">
                                            <span class="badge bg-success">@item.Amount</span>  [NT$@item.Price.ToString("#,##.##")] - @item.Movie.Name
                                        </div>
                                    </li>
                                }
                            </ul>
                        </td>
                        <td class="align-middle text-center">
                            NT$@order.OrderItems.Select(n => n.Price * n.Amount).Sum().ToString("#,##.##")
                        </td>
                        <td class="align-middle text-center"> - </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>